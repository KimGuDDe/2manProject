<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="data.mapper.LoginDataMapper">
	<insert id="insertLoginData"
		parameterType="data.dto.LoginDataDto">
		INSERT INTO logindata (id, username, password, photo, writeday)
		VALUES (#{id}, #{username}, #{password}, #{photo}, NOW())
	</insert>
	<select id="findById" parameterType="string"
		resultType="data.dto.LoginDataDto">
		SELECT * FROM logindata WHERE id = #{id}
	</select>
	<select id="findByUsername" parameterType="string"
		resultType="data.dto.LoginDataDto">
		SELECT * FROM logindata WHERE username = #{username}
	</select>
	<update id="updateLoginData"
		parameterType="data.dto.LoginDataDto">
		UPDATE logindata
		SET username = #{username}, password = #{password}, photo = #{photo}
		WHERE id = #{id}
	</update>
	<delete id="deleteLoginData" parameterType="string">
		DELETE FROM logindata WHERE id = #{id}
	</delete>
</mapper>