<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="data.mapper.IBoardFileMapper">
	<insert id="insertBoardFile" parameterType="IBoardFileDto">
		insert into iboardfile (idx,filename) values (#{idx},#{filename})
	</insert>
	<select id="getFiles" parameterType="int" resultType="IBoardFileDto">
		select * from iboardfile where idx = #{idx} order by num
	</select>
	<delete id="deleteFile" parameterType="int">
		delete from iboardfile where num=#{num}
	</delete>
	<select id="getFileByNum" parameterType="int" resultType="IBoardFileDto">
        select * from iboardfile where num = #{num}
    </select>
</mapper>